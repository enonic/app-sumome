<?xml version="1.0" encoding="UTF-8"?>
<site>
	<form>
		<input name="sumomeId" type="TextLine">
			<label>SumoMe ID</label>
			<occurrences minimum="0" maximum="1"/>
		</input>
		<input name="embed" type="RadioButton">
		  <label>Embedding type</label>
		  <occurrences minimum="0" maximum="0"/>
		  <config>
		    <option value="legacy">In &lt;head&gt;</option>
		    <option value="modern">In &lt;body&gt;</option>
		  </config>
		  <default>modern</default>
		</input>
	</form>
	<processors>
    	<response-processor name="sumome-script" order="50"/>
	</processors>
</site>
